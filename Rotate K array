#include <iostream>

using namespace std;

void swap(int arr[], int start,int end){
        while(start<end){
            int temp = arr[start];
            arr[start]= arr[end];
            arr[end] = temp;
            start++;
            end--;
        }
    }
    
    void rotateArray(int arr[], int k,int n){
        if(k==0){
            return;
        }
        //k = k%n;
        
        swap(arr,0,k-1);
        swap(arr,k,n-1);
        swap(arr,0,n-1);
    }
    
    void printArray(int arr[], int size){
        
        for(int i=0;i<size;i++){
            cout<<arr[i]<<" ";
        }

    }


int main()
{
    // rotate the K array by element by Block swapping algorithms
    
    int arr[] = { 1, 2, 3, 4, 5, 6, 7 };
    int n = sizeof(arr) / sizeof(arr[0]);
    int k = 2;
 
    // Function calling
    rotateArray(arr, k, n);
    printArray(arr, n);
    
    return 0;
}
